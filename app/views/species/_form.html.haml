= form_for @species, :html => { :multipart => true } do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = image_tag @species.photo.url(:medium) if @species.photo.exists?
  %p
    = f.file_field :photo
  %p
    = f.submit
